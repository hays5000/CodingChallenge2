<p id="notice"><%= notice %></p>

<h4>Units</h4>

<div class="table">
  <table>
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type<th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @units.each do |unit| %>
        <tr>
          <td><%= link_to unit['name'], :controller => 'units', :action => 'show', :id => unit['id'] %> </td>
          <td><%= unit['type'].capitalize %></td>
          <td><%= link_to 'Delete', unit_path(unit['id']), :method => :delete %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Unit', new_unit_path %>
